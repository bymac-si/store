<div class="card mb-3">
<div class="card-body">
<%= form_with(model: [:admin, base_status]) do |form| %>
   <div class="mb-3">
    <%= form.label        :description, class:"form-label" %>
    <%= form.text_field   :description, class:"form-control" %>
    <% if base_status.errors[:description].any?%>
    <div class="alert alert-danger" status="alert">
        <%= base_status.errors[:description].first %>
        </div>
        <%end%>
        </div>
    <%= form.submit class: 'btn btn-primary text-white' %>
<% end %>
</div>
</div>
<br>