<!-- VARIABLES: base_product -->
<div class="row"><div class="col">
  <div class="card  mb-4 rounded shadow-sm " style="height:35rem;">
    <div class="card-header py-3">
          <% if base_product.main_photo.attached? %>
          <%= image_tag base_product.main_photo, class:"rounded card-img-top shadow-sm", style:"max-height:10rem;" %>
            <% end %>
            <h4 class="my-0 fw-normal"><%= base_product.name %></h4>
            <h6 class="text-muted">
            <%= base_product.category.name %>
        </h6>
    </div>
          <div class="card-body">
            <h2 class="card-title pricing-card-title text-primary"><%= number_to_currency(base_product.price,  unit: 'CLP $ ', delimiter: '.', precision: 0) %> 
            </h2>
            <%= base_product.description %>
            </div>
            <div class="card-footer">
            <%= link_to add_product_to_cart_path(base_product), method: :post, class:'w-100 btn btn-lg btn-outline-success' , data: { confirm: 'Â¿desea agregar el producto?' } do %>
            <i class="bi bi-cart-plus"></i> Agregar al carro
            <% end %>
          </div>
        </div>
  </div>
</div>