<!-- VARIABLES: base_product -->
<div class="row"><div class="col">
  <div class="card  mb-4 rounded shadow-sm " style="height:35rem;">
    <div class="card-header py-3">
          <% if base_product.main_photo.attached? %>
          <%= image_tag base_product.main_photo, class:"rounded card-img-top shadow-sm", style:"max-height:10rem;" %>
            <% end %>
            <h4 class="my-0 fw-normal"><%= base_product.name %></h4>
            <h6 class="text-muted">
            <%= base_product.category.name %>
        </h6>
    </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title">$ <%= number_with_delimiter(base_product.price, :delimiter => '.') %> 
            <small class="text-muted fw-light">CLP</small></h1>
            <%= base_product.description %>
            </div>
            <div class="card-footer">
            <%= link_to add_product_to_cart_path(base_product), method: :post, class:'w-100 btn btn-lg btn-outline-success' , data: { confirm: 'Add to the cart?' } do %>
            <i class="bi bi-cart-plus"></i> Add to Cart
            <% end %>
          </div>
        </div>
  </div>
</div>